{
  "name": "Custom Flutter Environment",

  // 告诉 Codespaces 使用我们自己编写的 Dockerfile 来构建环境
  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        // Flutter SDK 将被安装在这个路径
        "dart.flutterSdkPath": "/usr/local/flutter"
      },
      // 需要自动安装的 VS Code 插件
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "eamodio.gitlens",
        "vscode-icons-team.vscode-icons"
      ]
    }
  },

  // 端口转发
  "forwardPorts": [3000, 8080],

  // 指定远程用户
  "remoteUser": "vscode"
}